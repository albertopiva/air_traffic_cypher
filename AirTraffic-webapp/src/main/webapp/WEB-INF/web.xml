<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>AirTraffic</display-name>
    <description>Web App to display some query with neo4j</description>

    <!-- SET THE HOMEPAGE -->
    <welcome-file-list>
        <welcome-file>/html/home.html</welcome-file>
    </welcome-file-list>


    <!-- SERVLET MAPPING -->

    <!--Rest Dispatcher Servlet-->
    <servlet>
        <servlet-name>RestDispatcherServlet</servlet-name>
        <servlet-class>servlet.RestDispatcherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestDispatcherServlet</servlet-name>
        <url-pattern>/flights/*</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/appdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>